<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.binesh.chatapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Chat App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.binesh.chatapp.MessageActivity"></activity>
        <activity android:name="com.binesh.chatapp.Fragments.UsersFragment" />
        <activity android:name="com.binesh.chatapp.Fragments.ProfileFragment" />
        <activity android:name="com.binesh.chatapp.Fragments.ChatsFragment" />
        <activity android:name="com.binesh.chatapp.ResetPasswordActivity" />
        <activity android:name="com.binesh.chatapp.RegisterActivity" />
        <activity android:name="com.binesh.chatapp.LoginActivity" />
        <activity android:name="com.binesh.chatapp.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.binesh.chatapp.MainActivity">
        </activity>
    </application>

</manifest>